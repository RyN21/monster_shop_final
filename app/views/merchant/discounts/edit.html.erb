<h2>Edit Discount</h2>
<%= form_tag "/merchant/discounts/#{@discount.id}" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @discount.name %>

  <%= label_tag :description %>
  <%= text_field_tag :description, @discount.description %>

  <%= label_tag :percent_off %>
  <%= number_field_tag :percent_off, nil, in: 5..95 %>

  <%= label_tag :minimum_quantity %>
  <%= number_field_tag :minimum_quantity, @discount.minimum_quantity %>

  <%= submit_tag 'Submit' %>
<% end %>
