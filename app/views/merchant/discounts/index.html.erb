<h2><%= link_to @discounts.merchant.name %></h2>
<p><%= @discounts.merchant.address %></p>
<p><%= @discounts.merchant.city %> <%= @discounts.merchant.state %> <%= @discounts.merchant.zip %></p>

<%= link_to 'My Items', '/merchant/items' %>


<section class="discounts">
  <% @discounts.each do |discount| %>
    <section id="discount-<%= discount.id %>">
      <%= link_to discount.name, "/merchant/discounts/#{discount.id}" %>
      <p>Description: <%= discount.description %></p>
      <p>Percent Off: <%= discount.percent_off %></p>
      <p>Minimum Quantity Per Item: <%= discount.minimum_quantity %></p>
    </section>
  <% end %>
</section>
