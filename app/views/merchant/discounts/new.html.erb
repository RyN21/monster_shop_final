<h2>Add a new discount!</h2>

<% form_tag '/merchant/discounts', method: :post do %>

<%= label_tag :name %>
<%= text_field_tag :name %>

<%= label_tag :description %>
<%= text_field_tag :description %>

<%= label_tag :percent_off %>
<%= number_field_tag :percent_off, nil, in: 5..95 %>

<%= label_tag :minimum_quantity %>
<%= number_field_tag :minimum_quantity %>

<%= submit_tag 'Create Discount' %>
<% end %>
